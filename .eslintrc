{
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "semi": ["error", "never"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"]
  }
}
